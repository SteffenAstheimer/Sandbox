<!--PROBLEM: @type-Werte, die nicht in Richtlinien sind: dating, side_note, address, teleprint -->
<!--PROBLEM: @place required? Ca. 2500 Fehlermeldungen -->
<!--PROBLEM: @resp fehlt bei ca. 100 Elementen -->
        <elementSpec ident="note" mode="change">
          <attList>
            <attDef ident="type" usage="req" mode="change">
              <valList type="closed" mode="replace">
                <valItem ident="footnote">
                  <gloss>originale Fußnote</gloss>
                  <desc>Fußnoten werden über das ganze Dokument fortlaufend mit dem Attribut @n gezählt.</desc>
                </valItem>
                <valItem ident="annotation">
                  <gloss>Annotation</gloss>
                  <desc>Angaben zum Ort auf dem Papier (@place) und zur Schreiberhand (@resp) sind obligatorisch.</desc>
                </valItem>
                <valItem ident="foliation">
                  <gloss>Foliierung</gloss>
                  <desc>Zählung der Blätter oder Bogen. Angaben zum Ort auf dem Papier (@place) und zur Schreiberhand (@resp) sind obligatorisch.</desc>
                </valItem>
                <valItem ident="pagination">
                  <gloss>Paginierung</gloss>
                  <desc>Zählung der Seiten. Angaben zum Ort auf dem Papier (@place) und zur Schreiberhand (@resp) sind obligatorisch.</desc>
                </valItem>
                <valItem ident="numbering">
                  <gloss>Nummerierung</gloss>
                  <desc>Zählung der Korrespondenzstücke. Angaben zum Ort auf dem Papier (@place) und zur Schreiberhand (@resp) sind obligatorisch.</desc>
                </valItem>
                <valItem ident="stamp">
                  <gloss>Stempel</gloss>
                  <desc>Angaben zum Ort auf dem Papier (@place) und zur Schreiberhand (@resp) sind obligatorisch.</desc>
                </valItem>
                <valItem ident="shelfmark">
                  <gloss>Signatur</gloss>
                  <desc>Angaben zum Ort auf dem Papier (@place) und zur Schreiberhand (@resp) sind obligatorisch.</desc>
                </valItem>
                <valItem ident="label">
                  <gloss>Post-Aufkleber/Zensurmarken</gloss>
                  <desc>Angaben zum Ort auf dem Papier (@place) und zur Schreiberhand (@resp) sind obligatorisch.</desc>
                </valItem>
                <valItem ident="commentary">
                  <gloss>Stellenkommentar</gloss>
                  <desc>Autor ist mit Schlüssel im Attribut @resp aufzuführen.</desc>
                </valItem>
                <valItem ident="objdesc">
                  <gloss>object description</gloss>
                  <desc>Autor ist mit Schlüssel im Attribut @resp aufzuführen.</desc>
                </valItem>
                <valItem ident="dating">
                  <gloss>Datierungen</gloss>
                  <desc>Von fremder Hand hinzugefügte Datierungen. Angaben zum Ort auf dem Papier (@place) und zur Schreiberhand (@resp) sind obligatorisch.</desc>
                </valItem>
                <valItem ident="address">
                  <gloss>Adressen</gloss>
                  <desc>Autor ist mit Schlüssel im Attribut @resp aufzuführen, sofern es sich nicht um die Haupthand handelt.</desc>
                </valItem>
                <valItem ident="teleprint">
                  <gloss>Telegramme</gloss>
                  <desc>Autor ist mit Schlüssel im Attribut @resp aufzuführen.</desc>
                </valItem>
              </valList>
            </attDef>
            <attDef ident="subtype" mode="change">
              <valList type="closed" mode="replace">
                <valItem ident="ed_diff">
                  <desc>Abweichung gegenüber vorliegenden Editionen</desc>
                </valItem>
                <valItem ident="ed_diff_major">
                  <desc>bedeutende Abweichung gegenüber vorliegenden Editionen</desc>
                </valItem>
                <valItem ident="ed_diff_minor">
                  <desc>unbedeutende Abweichung gegenüber vorliegenden Editionen</desc>
                </valItem>
              </valList>
            </attDef>
          </attList>
          <constraintSpec ident="footnoteCounting" scheme="schematron">
            <constraint>
              <sch:report test="@type = 'footnote' and not(@n)">
                Fußnoten müssen mit dem Attribut 'n' durchgezählt werden.
              </sch:report>
            </constraint>
          </constraintSpec>
          <constraintSpec ident="notePlacement" scheme="schematron">
            <constraint>
              <sch:report test="(@type= 'annotation' or @type= 'foliation' or @type= 'pagination' or @type= 'numbering' or @type= 'stamp' or @type= 'shelfmark' or @type= 'label' or @type= 'dating') and not(@place)">
                Die Platzierung auf der Seite muss über das Attribut 'place' angegeben werden.
              </sch:report>
            </constraint>
          </constraintSpec>
          <constraintSpec ident="noteResponsibility" scheme="schematron">
            <constraint>
              <sch:report test="(@type= 'annotation' or @type= 'foliation' or @type= 'pagination' or @type= 'numbering' or @type= 'stamp' or @type= 'shelfmark' or @type= 'label' or @type= 'dating' or @type= 'commentary' or @type= 'objdesc') and not(@resp)">
                Die Schreiberhand muss über das Attribut 'resp' angegeben werden.
              </sch:report>
            </constraint>
          </constraintSpec>
        </elementSpec>
        
